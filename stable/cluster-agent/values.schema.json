{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://stackstate.io/example.json",
  "type": "object",
  "default": {},
  "title": "StackState Agent Helm chart values",
  "required": [
    "stackstate"
  ],
  "properties": {
    "stackstate": {
      "type": "object",
      "required": [
        "apiKey",
        "cluster",
        "url"
      ],
      "properties": {
        "apiKey": {
          "type": "string"
        },
        "cluster": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[\\w_]([\\w_.-]*[\\w_])?$"
            },
            "authToken": {
              "type": "string"
            }
          }
        },
        "url": {
          "type": "string"
        }
      }
    }
  }
}
